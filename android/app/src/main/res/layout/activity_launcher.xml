<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.LauncherActivity">

    <com.google.android.material.button.MaterialButton
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/student" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/teacher"

            app:layout_constraintHorizontal_bias="0.0" android:text="STUDENT"/>
    <com.google.android.material.button.MaterialButton
            android:text="TEACHER"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/teacher" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="169dp"
            android:layout_height="59dp"
            android:id="@+id/textView"
            android:paddingTop="20dp"
            android:paddingLeft="60dp"
            android:hint="INTRO" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="209dp"
            android:layout_height="128dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/student" android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>